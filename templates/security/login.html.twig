{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}


    {% if error %}
        <div class="container mt-5 ">
            <div class="row justify-content-center">
                <div style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        </div>
    {% endif %}


    <div class="container mt-5 ">
        <div class="row justify-content-center">

            <div class="col-md-6">

                <div class="card">
                    <div class="card-body"> <div class="col-md-6">Login</div> </div>
                    <div class="card-body">
                        <form id="registrationForm form-control" action="{{ path('login') }}" method="post">
                            <div class="form-group mb-3">
                                <label for="email">
                                    Email
                                </label>
                                <input type="email"
                                       class="form-control"
                                       id="email"
                                       name="_username"
                                       value="{{ last_username }}"
                                       autofocus
                                       placeholder="Email" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">
                                    Password
                                </label>
                                <input type="password"
                                       class="form-control"
                                       id="password"
                                       placeholder="Password"
                                       name="_password"
                                       required />
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary w-100">
                                    Login
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}